# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# API Keys (get from respective services)
MTA_API_KEY=your_mta_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_REGION=us-east-1

# S3 Bucket Names (will be created by CloudFormation)
S3_DATA_LAKE_BUCKET=smartroute-data-lake-{account-id}
S3_LOGS_BUCKET=smartroute-logs-{account-id}

# DynamoDB Tables
DYNAMODB_STATION_STATE_TABLE=station_realtime_state
DYNAMODB_CACHED_ROUTES_TABLE=cached_routes
DYNAMODB_USER_SESSIONS_TABLE=user_sessions

# Kinesis Streams
KINESIS_TRANSIT_DATA_STREAM=transit_data_stream

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# Feature Flags
ENABLE_REALTIME_PROCESSING=true
ENABLE_LLM_ROUTING=true
ENABLE_CROWDING_PREDICTION=true
